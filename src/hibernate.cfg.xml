<!DOCTYPE hibernate-configuration 
  PUBLIC "-//Hibernate/Hibernate Configuration DTD 3.0//EN" 
  "http://www.hibernate.org/dtd/hibernate-configuration-3.0.dtd">

<hibernate-configuration>

	<session-factory name="aulaTI26S">
		<!-- Configurações da conexão ao banco de dados -->
		<property name="connection.driver_class">org.postgresql.Driver</property>
		<property name="connection.url">jdbc:postgresql://localhost:5432/faculdade</property>
		<property name="connection.username">postgres</property>
		<property name="connection.password">123456</property>

		<!-- Dialeto SQL -->
		<property name="dialect">org.hibernate.dialect.PostgreSQLDialect</property>

		<!-- Enable Hibernate's automatic session context management -->
		<property name="current_session_context_class">thread</property>

		<!-- Envia todas as instrucoes SQL executadas para o console. Esta opção 
			deve ser usada com o valor true apenas no ambiente de desenvolvimento. -->
		<property name="show_sql">true</property>
		
		

	</session-factory>

</hibernate-configuration>